<p id="notice"><%= notice %></p>

<h1>Listing Nota</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nota.each do |notum| %>
      <tr>
        <td><%= link_to 'Show', notum %></td>
        <td><%= link_to 'Edit', edit_notum_path(notum) %></td>
        <td><%= link_to 'Destroy', notum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

